<div class="row container container-sm paper">
  <div class="col sm-12">
    <div class="row flex-spaces">
      <div class="col lg-6 md-8 sm-12">
        <h3 class="margin-bottom-none margin-top-none">Sign in</h3>
      </div>
    </div>

    <%=
      form_for :user, routes.login_path do

        div class: "row flex-spaces" do
          div class: "col lg-6 md-8 sm-12" do
            div class: "form-group" do
              label      :email
              email_field :email, class: "input-block"
            end
          end
        end

        div class: "row flex-spaces" do
          div class: "col lg-6 md-8 sm-12" do
            div class: "form-group" do
              label      :password
              password_field :password, class: "input-block"
            end
          end
        end

        div class: "row flex-center" do
          div class: "col" do
            submit "Login"
          end
        end
      end
    %>
    <hr>
    <div class="row flex-spaces">
      <div class="col lg-6 md-8 sm-12">
        <p>
          Don't have an account yet? Click <%= link_to "here", routes.new_user_path %> to sign up.
        </p>
      </div>
    </div>
  </div>
</div>
